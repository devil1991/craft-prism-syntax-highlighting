{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("thejoshsmith\\prismsyntaxhighlighting\\assetbundles\\prismsyntaxhighlighting\\PrismSyntaxHighlightingAsset") %}

{{ forms.selectField({
    label: 'Theme',
    instructions: 'Choose an editor theme.',
    id: 'editorTheme',
    name: 'editorTheme',
    value: field['editorTheme'] is empty ? defaults['editorTheme'] : field['editorTheme'],
    options: defaults.getEditorThemes()})
}}

{{ forms.selectField({
    label: 'Syntax',
    instructions: 'Choose a syntax to highlight text with.',
    id: 'editorLanguage',
    name: 'editorLanguage',
    value: field['editorLanguage'] is empty ? defaults['editorLanguage'] : field['editorLanguage'],
    options: defaults.getEditorLanguages()})
}}

{{ forms.textField({
    label: 'Height',
    instructions: 'Set the number of rows the editor will be displayed at.',
    id: 'editorHeight',
    name: 'editorHeight',
    value: field['editorHeight'] is empty ? defaults['editorHeight'] : field['editorHeight']})
}}

{{ forms.textField({
    label: 'Tab Width',
    instructions: 'Set the tab width. This uses the experimental CSS property `tab-size`.',
    id: 'editorTabWidth',
    name: 'editorTabWidth',
    value: field['editorTabWidth'] is empty ? defaults['editorTabWidth'] : field['editorTabWidth']})
}}

{{ forms.lightswitchField({
    label: 'Line Numbers',
    instructions: 'Choose whether line numbers are displayed or not.',
    id: 'editorLineNumbers',
    name: 'editorLineNumbers',
	on: field['editorLineNumbers'] is null ? defaults['editorLineNumbers'] : field['editorLineNumbers']})
}}
